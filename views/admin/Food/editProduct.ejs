<div id="edit-product" class="tab-pane fade show active" role="tabpanel">
    <div class="card shadow mb-4 mt-t active">
      
      <div class="card-body">
        <form
          action="/admin/product/<%= product.id%>?_method=PUT"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="row g-3">
            <div class="form-group col-md-6">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Enter name"
                name="name"
                required
                value="<%= product.name %>"
              />
            </div>
            <div class="form-group col-md-6">
              <label for="Price">Price</label>
              <input
                type="number"
                class="form-control"
                id="price"
                placeholder="Enter price"
                name="price"
                required
                value="<%= product.price %>"
              />
            </div>
            </div>
            <div class="form-group col-md-6">
              <label for="name">Category</label>
              <select class="form-select" name="categoryId">
                <option value="<%= product.categoryId._id %>" selected>
                  <%= product.categoryId.name %>
                </option>
                <% for (let i = 0; i< category.length; i++) { %>
                <option value="<%= category[i].id %>">
                  <%= category[i].name %>
                </option>
                <% } %>
              </select>
            </div>
            <div class="form-group col-md-6">
              <label for="image">Image</label>
              <input
                type="file"
                class="form-control"
                id="image"
                name="image"
                multiple
              />
            </div>
            
          </div>
  
          <button type="submit" class="btn btn-primary">Save Update</button>
        </form>
      </div>
    </div>
  </div>
  