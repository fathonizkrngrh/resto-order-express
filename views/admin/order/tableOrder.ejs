<div id="show-order" class="tab-pane fade show active" role="tabpanel">
  <!-- Table -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered table-sm"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No</th>
              <th>Invoice</th>
              <th>Total</th>
              <th>Table Number</th>
              <th>Buyer</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < order.length; i++){ %>
            <tr>
              <td><%- i+1 %></td>
              <td><%- order[i].invoice %></td>
              <td>Rp. <%- order[i].total %></td>
              <td><%- order[i].tableNumber %></td>
              <% if(order[i].isPaid === false){ %>
              <td>
                <b class="text-danger"> Unpaid </b>
              </td>
              <% } else if(order[i].isPaid === true){ %>
              <td>
                <b class="text-success">Paid</b>
              </td>
              <% } %>

              <td>
                <form
                  action="/admin/order/<%- order[i].id %>/status?_method=PUT"
                  method="POST"
                >
                  <a
                    href="/admin/order/show-image/<%- order[i].id%>"
                    class="btn btn-info btn-circle btn-sm"
                    ><i class="fas fa-image"></i
                  ></a>
                  <button
                    class="btn btn-circle btn-sm btn-success"
                    type="submit"
                  >
                    <i class="fas fa-check"></i>
                  </button>
                </form>
              </td>
            </tr>

            <% }%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- AkhirTable -->
</div>
